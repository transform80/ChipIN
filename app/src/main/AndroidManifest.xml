<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dcnproject.yashdani.chipin">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".GroupView" />
        <activity
            android:name=".HomePageWithNav"
            android:label="@string/title_activity_home_page_with_nav"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".AddTransactionFromGroup" />
        <activity
            android:name=".AddTransactionWithNav"
            android:label="@string/title_activity_add_transaction_with_nav"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddGroupWithNav"
            android:label="@string/title_activity_add_group_with_nav"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsWithNav"
            android:label="@string/title_activity_settings_with_nav"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
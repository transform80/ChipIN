<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dcnproject.yashdani.chipin.ProfileView"
    tools:showIn="@layout/app_bar_profile_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/profilePicButton"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="115dp"
            android:textAlignment="center"
            app:srcCompat="@mipmap/ic_person_white_36dp"
            android:background="@drawable/custom_button"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="30sp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xyz@gmail.com"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31sp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outstanding Amounts:"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="290dp">

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="?android:attr/listChoiceIndicatorSingle" />

        <TextView
            android:id="@+id/memberNameEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:ems="10"
            android:textColor="@color/colorBlack"
            android:text="Name" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>


<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.dcnproject.yashdani.chipin.AddBalanceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/add_amoutn_Et"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginTop="150dp"
            android:drawableLeft="@mipmap/ic_payment_white_24dp"
            android:layout_centerHorizontal="true"
            android:inputType="numberDecimal"
            android:background="@color/trans"
            android:textColor="#fff"
            android:hint="Enter amount to be added"
            android:textColorHint="#fff"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/add_balance_button"
            android:layout_width="120dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/add_amoutn_Et"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:layout_marginTop="40dp"
            android:textColor="#fff"
            android:background="@drawable/pink_buttons"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dcnproject.yashdani.chipin.AddTransactionWithNav"
    tools:showIn="@layout/app_bar_add_transaction_with_nav">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Transaction"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textView9"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Select Group"
            android:layout_alignEnd="@id/textView9"
            android:layout_alignStart="@id/textView9"/>

        <Spinner
            android:id="@+id/groupSpinner"
            android:layout_below="@id/textView13"
            android:backgroundTint="#fff"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contextClickable="true"
            android:layout_alignEnd="@id/textView9"
            android:layout_alignStart="@id/textView9"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Member"
            android:textStyle="bold"
            android:layout_alignEnd="@id/textView9"
            android:layout_alignStart="@id/textView9"
            android:textColor="#ffffff"
            android:layout_below="@id/groupSpinner"
            android:textSize="22sp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/memberSpinner"
            android:layout_width="wrap_content"
            android:backgroundTint="#fff"
            android:layout_alignEnd="@id/textView9"
            android:layout_alignStart="@id/textView9"
            android:layout_below="@id/textView14"
            android:layout_height="wrap_content"
            android:contextClickable="true"
            android:clickable="true"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_alignEnd="@id/textView9"
            android:layout_alignStart="@id/textView9"
            android:layout_height="wrap_content"
            android:layout_below="@id/memberSpinner"
            android:textStyle="bold"
            android:text="Enter Amount(in Rupees):"
            android:textSize="22sp"
            android:textColor="#ffffff"/>

        <EditText
            android:id="@+id/amountEt"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:ems="10"
            android:textSize="14sp"
            android:layout_alignEnd="@id/textView9"
            android:layout_alignStart="@id/textView9"
            android:textColor="#ffffff"
            android:layout_below="@id/textView12"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#11000000"
            android:hint=" Enter an amount"
            android:textColorHint="#ffffff"
            android:drawableLeft="@mipmap/ic_payment_white_24dp"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_alignEnd="@id/textView9"
            android:layout_alignStart="@id/textView9"
            android:layout_height="wrap_content"
            android:text="Entry Info:"
            android:textStyle="bold"
            android:layout_below="@id/amountEt"
            android:layout_marginTop="18sp"
            android:textColor="#ffffff"
            android:textSize="22sp"
            />

        <EditText
            android:id="@+id/descEt"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:ems="10"
            android:drawableLeft="@mipmap/ic_description_white_24dp"
            android:layout_below="@id/textView10"
            android:textColor="#ffffff"
            android:inputType="textPersonName"
            android:layout_marginLeft="20dp"
            android:layout_alignEnd="@id/textView9"
            android:layout_alignStart="@id/textView9"
            android:layout_marginRight="20dp"
            android:background="#11000000"
            android:textColorHint="#ffffff"
            android:hint=" Description"
            android:textSize="14sp"/>


        <Button
            android:id="@+id/submit_trans"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="56dp"
            android:background="@drawable/pink_buttons"
            android:text="ADD"
            android:textColor="#fff"
            android:textSize="18sp" />
       <!-- <Button
            android:id="@+id/submit_trans"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descEt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="Submit" />-->
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

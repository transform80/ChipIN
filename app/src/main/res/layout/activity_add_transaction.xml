<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dcnproject.yashdani.chipin.AddTransaction">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Transaction"
            android:textColor="@color/colorBlack"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Member"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/memberSpinnerInGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contextClickable="true"
            android:clickable="true"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Amount(in Rupees):"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"/>

        <EditText
            android:id="@+id/amountEtInGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:hint="Enter an amount"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entry Info:"
            android:layout_marginTop="18sp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/descEtInGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/colorBlack"
            android:inputType="textPersonName"
            android:hint="Description"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/submit_trans_in_group"
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginLeft="100dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>

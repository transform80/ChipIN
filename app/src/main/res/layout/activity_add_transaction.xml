<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dcnproject.yashdani.chipin.AddTransaction">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient"
        >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Transaction"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:layout_marginStart="30dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/textView9"
            android:text="Select Member"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/memberSpinnerInGroup"
            android:layout_alignStart="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_alignEnd="@id/textView9"
            android:layout_below="@+id/textView14"
            android:layout_height="wrap_content"
            android:backgroundTint="#fff"
            android:clickable="true"
            android:focusable="true"
            />

        <TextView
            android:id="@+id/textView12"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_alignStart="@+id/textView9"
            android:layout_height="wrap_content"
            android:layout_below="@+id/memberSpinnerInGroup"
            android:layout_alignEnd="@id/textView9"
            android:text="Enter Amount(in Rupees):"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <EditText
            android:id="@+id/amountEtInGroup"
            android:layout_below="@id/textView12"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:background="#11000000"
            android:drawableStart="@mipmap/ic_payment_white_24dp"
            android:layout_marginRight="20dp"
            android:layout_alignStart="@+id/textView9"
            android:textSize="18sp"
            android:layout_alignEnd="@id/textView9"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:hint=" Enter an amount"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_below="@id/amountEtInGroup"
            android:layout_height="wrap_content"
            android:text="Enter Info:"
            android:layout_marginTop="25sp"
            android:textStyle="bold"
            android:layout_alignEnd="@id/textView9"
            android:textColor="#ffffff"
            android:layout_alignStart="@+id/textView9"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/descEtInGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:drawableStart="@mipmap/ic_description_white_24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_below="@id/textView10"
            android:layout_alignStart="@+id/textView9"
            android:layout_alignEnd="@id/textView9"
            android:inputType="textPersonName"
            android:background="#11000000"
            android:hint=" Description"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/submit_trans_in_group"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/descEtInGroup"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:layout_marginTop="150dp"
            android:background="@drawable/pink_buttons"
            android:text="Submit" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dcnproject.yashdani.chipin.LoginActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context="demo.ayaz.demo.MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="46dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/chipinLogo2" />

        <EditText
            android:id="@+id/loginEmailField"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="#11000000"
            android:drawableLeft="@mipmap/ic_email_white_24dp"
            android:ems="10"
            android:hint=" E-mail"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/loginPasswordField"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/loginEmailField"
            android:layout_below="@+id/loginEmailField"
            android:layout_marginTop="20dp"
            android:background="#11000000"
            android:drawableLeft="@mipmap/ic_lock_outline_white_24dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />


        <Button
            android:id="@+id/loginButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/signup"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="47dp"
            android:background="@drawable/pink_buttons"
            android:text="Login"
            android:textColor="#fff"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:text="Don't have an account? Sign Up"
            android:textColor="#ffffff" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView"
            android:orientation="horizontal">

        </LinearLayout>
    </RelativeLayout>




